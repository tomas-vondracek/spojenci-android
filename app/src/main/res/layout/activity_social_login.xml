<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/activity_container"
	tools:context="cz.spojenci.android.activity.SocialLoginActivity">

	<TextView android:id="@+id/account_status"
		style="?android:title"
		tools:text="@string/account_status_connected"
		android:padding="@dimen/activity_horizontal_margin"
		android:textAlignment="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin">

		<com.google.android.gms.common.SignInButton
			android:id="@+id/account_sign_in_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|bottom"
			android:layout_margin="4dp"
			android:visibility="visible" />

		<LinearLayout
			android:id="@+id/account_sign_out_and_disconnect"
			style="?android:buttonBarStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:orientation="horizontal"
			android:visibility="gone"
			tools:visibility="visible">

			<Button
				style="?android:buttonBarButtonStyle"
				android:id="@+id/account_revoke"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/account_revoke" />

			<Button
				style="?android:buttonBarButtonStyle"
				android:id="@+id/account_sign_out_button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/account_disconnect" />
		</LinearLayout>

	</FrameLayout>

</LinearLayout>
