<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>

		<variable name="form"
			type="cz.spojenci.android.presenter.CreateActivityForm"/>
	</data>

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView android:id="@+id/update_title"
			android:text="Enter your activity value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/padding_large"
			android:layout_marginStart="@dimen/activity_horizontal_margin"
			android:labelFor="@+id/update_value"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

		<EditText
			android:id="@+id/update_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:gravity="end"
			android:ems="10"
			android:layout_marginTop="@dimen/padding_large"
			app:layout_constraintTop_toBottomOf="@+id/update_title"
			app:layout_constraintLeft_toLeftOf="@+id/update_title"/>

		<TextView android:id="@+id/update_unit"
			tools:text="Unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBaseline_toBaselineOf="@+id/update_value"
			app:layout_constraintLeft_toRightOf="@+id/update_value"
			android:layout_marginStart="@dimen/padding"/>

		<Button android:id="@+id/update_send"
			style="?android:borderlessButtonStyle"
			android:text="@string/update_challenge_send"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/padding_large"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintTop_toBottomOf="@+id/update_value"
			app:layout_constraintVertical_bias="1.0"
			tools:layout_constraintTop_creator="1"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1"/>

		<ProgressBar android:id="@+id/update_progress"
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/padding"
			android:layout_marginTop="@dimen/padding"
			android:visibility="gone"
			android:indeterminate="true"
			tools:visibility="visible"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/update_send"
			app:layout_constraintTop_toBottomOf="@+id/update_value"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintBottom_creator="1"
			tools:layout_constraintLeft_creator="1"/>

	</android.support.constraint.ConstraintLayout>
</layout>